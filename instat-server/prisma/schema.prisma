generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id_product          Int    @id @default(autoincrement())
  sh8_product         Int    @unique
  sh2_product         Int
  libelle_product     String
  AnneeApparition     Int
  TrimestreApparition Int
  @@unique([sh8_product, id_product])
  flux                Flux[] // Relation one-to-many avec Flux
}

model Flux {
  id_flux Int      @id @default(autoincrement()) @unique
  produit Product? @relation(fields: [sh8,product_id], references: [sh8_product, id_product], onDelete: Cascade)
  product_id Int
  sh8     Int
  type    String
  annee   Int
  libelle String
  sh2     Int

  valeur                         Int
  poids_net                      Int
  quantite                       Int
  prix_unitaire                  Int
  prix_unitaire_moyenne_annuelle Int?
}
